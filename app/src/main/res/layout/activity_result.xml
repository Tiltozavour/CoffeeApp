<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/backgroundThirdActivity"
    android:layout_width="match_parent"

    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        tools:context=".presentation.ResultOrderFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:layout_margin="14dp"
            android:textColor="@color/textColorForThird"
            android:textStyle="bold"
            android:text="@string/your_order">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textColor="@color/textColorForThird"
            android:text="@string/drinks">
        </TextView>

        <TextView
            android:id="@+id/drinkTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:textColor="@color/textColorForThird"
            android:text="@string/for_drink">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textColor="@color/textColorForThird"
            android:text="@string/just_type">
        </TextView>

        <TextView
            android:id="@+id/drinkTypesChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:textColor="@color/textColorForThird"
            android:text="@string/drinkTypesChoice">
        </TextView>

        <TextView
            android:id="@+id/SugarTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textColor="@color/textColorForThird"
            android:text="@string/sugar">
        </TextView>

        <TextView
            android:id="@+id/SugarCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:textColor="@color/textColorForThird"
            android:text="@string/sugar_count">
        </TextView>

        <TextView
           android:id="@+id/siropTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textColor="@color/textColorForThird"
            android:text="@string/sirop_TV">
        </TextView>

        <TextView
            android:id="@+id/siropCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:textColor="@color/textColorForThird"
            android:text="@string/sirop_count">
        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:contentDescription="@string/the_cup_of_coffee"
            android:src="@drawable/coffee_mug" />

    </LinearLayout>
</ScrollView>